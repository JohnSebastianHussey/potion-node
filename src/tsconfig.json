{
	"extends": "../tsconfig.json",
	"angularCompilerOptions": {
		"annotateForClosureCompiler": true,
		"genDir": "../out-tsc/lib-gen-dir/",
		"flatModuleOutFile": "ng.js",
		"flatModuleId": "potion-client",
		"strictMetadataEmit": true,
		"skipTemplateCodegen": true
	},
	"compilerOptions": {
		"baseUrl": "",
		"rootDir": "./",
		"target": "es2015",
		"lib": [
			"es2017",
			"dom"
		],
		"outDir": "../out-tsc/ng-es2015/",
		"types" : [
			"reflect-metadata"
		]
	},
	"files": [
		"./index.ts"
	]
}
