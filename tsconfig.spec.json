{
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true
	},
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"declaration": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"target": "es5",
		"lib": [
			"es2017",
			"dom"
		],
		"outDir": "./lib",
		"types" : [
			"angular",
			"angular-mocks",
			"fetch-mock",
			"jasmine",
			"jquery",
			"node",
			"reflect-metadata"
		]
	},
	"include": [
		"config/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
