{
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true
	},
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"declaration": true,
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"target": "es2015",
		"lib": [
			"es2017",
			"dom"
		],
		"outDir": "./lib",
		"types" : [
			"angular",
			"jquery",
			"node",
			"reflect-metadata"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.spec.ts",
		"node_modules",
		"lib"
	]
}
