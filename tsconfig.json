{
	"include": [
		"src/@angular.ts",
		"src/angular.ts",
		"src/fetch.ts",
		"src/core.ts",
		"src/utils.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"declaration": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"noEmitOnError": true,
		"sourceMap": true,
		"target": "es6",
		"lib": [
			"dom",
			"es2017"
		],
		"outDir": "./lib",
		"types" : [
			"angular",
			"angular-mocks",
			"fetch-mock",
			"jasmine",
			"jquery",
			"node",
			"reflect-metadata",
			"whatwg-fetch"
		]
	}
}
